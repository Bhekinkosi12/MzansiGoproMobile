<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" Shell.NavBarIsVisible="False"
             xmlns:map="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps" xmlns:eventsvm="clr-namespace:MzansiGopro.ViewModels.EventsVM"
             x:Class="MzansiGopro.Views.EventsV.DisplayEventPage">
    <ContentPage.BindingContext>
        <eventsvm:EventDisplayViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                
                <RowDefinition Height="200" />
                <RowDefinition Height="*" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>

            <map:Map x:Name="locationMap">
                
                
            </map:Map>


            <Image Source="{Binding Image}" Aspect="AspectFit" Grid.Row="1" />


            <Button Text="Going to Event" TextColor="#fff" BackgroundColor="{StaticResource Primary}" HorizontalOptions="CenterAndExpand" Grid.Row="2" />




        </Grid>
    </ContentPage.Content>
</ContentPage>