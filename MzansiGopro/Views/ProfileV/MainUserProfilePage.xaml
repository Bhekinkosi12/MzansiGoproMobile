<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" Shell.NavBarIsVisible="False"
             xmlns:punny="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             x:Class="MzansiGopro.Views.ProfileV.MainUserProfilePage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Image Source="travel.png" Aspect="AspectFit" />


            <Frame Padding="0" BackgroundColor="Transparent" Grid.Row="1" >
                <StackLayout >

                    <punny:PancakeView Margin="30,16" HeightRequest="170" CornerRadius="20" WidthRequest="300" HorizontalOptions="Center"  >
                        <punny:PancakeView.Shadow>
                            <punny:DropShadow BlurRadius="4" Color="#000" Offset=".5,.5" />
                        </punny:PancakeView.Shadow>

                        <Label Text="Host Business" TextColor="#fff" FontSize="19" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                    </punny:PancakeView>
                    
                    
                    
                </StackLayout>
                
            </Frame>
            

        </Grid>
    </ContentPage.Content>
</ContentPage>